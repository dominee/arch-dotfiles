# Colours
alias diff='diff --color=auto'
alias grep='grep --color=auto'
alias ip='ip -color=auto'

# My old ones
alias myip='dig +short myip.opendns.com @resolver1.opendns.com'
alias wather='curl -4 -A Curl wttr.in/Bratislava'
alias mute='mpc volume 0'
alias unmute='mpc volume 15'

# Colours
export LESS='-R --use-color -Dd+r$Du+b$'

# Helpers
alias zsh-color='for i in {0..255}; do print -Pn "%K{$i}  %k%F{$i}${(l:3::0:)i}%f " ${${(M)$((i%6)):#3}:+"\n"}; done'
